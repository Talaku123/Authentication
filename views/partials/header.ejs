<div class="main-menu">
    <ul class="menu">
        <li class="m-item"><a href="/">Home</a></li>
        <li class="m-item"><a href="/Register">Register</a></li>
        <li class="m-item"><a href="/login">Login</a></li>
    </ul>
    <button class="menu-icons">
        <i class="bi bi-menu-up"></i>
        <i class="bi bi-x-lg"></i>
    </button>
    </div>
         <nav>
             <ul class="nav-head">
               <a class="login" href="/"><li><i class="bi bi-incognito"></i></li></a>
                <!-- <li class="login">Login picture</li> -->
             </ul>
             <ul id="login-covers">
                <li class="login-li" ><a class="login-home" href="/">Home</a></li>
                <li class="login-li"><a class="login-register" href="/register">Register</a></li>
                <li class="login-li"><a class="login-log" href="/login">Login</a></li>
             </ul>
         </nav>
    <script>
        const menu = document.querySelector(".menu");
        const menuItems = document.querySelectorAll(".m-item");
        const menuIcons = document.querySelector(".menu-icons");
        const biLg = document.querySelector(".bi-x-lg");
        const biMenuUp = document.querySelector(".bi-menu-up");
        function toggleMenu() {
            if (menu.classList.contains("showMenu")) {
                menu.classList.remove("showMenu");
                biLg.style.display = "none";
                biMenuUp.style.display = "block";
            } else {
                menu.classList.add("showMenu");
                biLg.style.display = "block";
                biMenuUp.style.display = "none";
            }
        }
        menuIcons.addEventListener("click", toggleMenu);
        menuItems.forEach(function (menuItems) {
            menuItems.addEventListener("click", toggleMenu);
        });
    </script>
